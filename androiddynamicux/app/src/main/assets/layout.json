{
    "element": "column",
    "attributes": {
        "modifierOptions": {
            "fillMaxWidth": true,
            "paddingStart": 16,
            "paddingEnd": 16,
            "paddingTop": 16,
            "paddingBottom": 16
        }
    },
    "children": [
        {
            "element": "label",
            "attributes": {
                "text": "Welcome"
            }
        },
        {
            "element": "full-width-text",
            "attributes": {
                "type": "email",
                "placeholder": "Email",
                "regex": "^[A-Z0-9._%+-]+@[A-Z0-9.-]+\\.[A-Z]{2,6}$",
                "errorMessage": "Enter valid email",
                "modifierOptions": {
                    "fillMaxWidth": true,
                    "paddingTop": 16,
                    "paddingBottom": 0
                }
            }
        },
        {
            "element": "full-width-text",
            "attributes": {
                "type": "password",
                "placeholder": "Password",
                "modifierOptions": {
                    "fillMaxWidth": false,
                    "paddingTop": 16,
                    "paddingBottom": 16
                }
            }
        },
        {
            "element": "button",
            "attributes": {
                "text": "Forgot Password?",
                "modifierOptions": {
                    "fillMaxWidth": true
                }
            }
        },
        {
            "element": "row",
            "children": [
                {
                    "element": "text",
                    "attributes": {
                        "type": "email",
                        "placeholder": "Email Row",
                        "regex": "^[A-Z0-9._%+-]+@[A-Z0-9.-]+\\.[A-Z]{2,6}$",
                        "errorMessage": "Enter valid email",
                        "modifierOptions": {
                            "fillMaxWidth": true,
                            "paddingBottom": 16
                        }
                    }
                },
                {
                    "element": "text",
                    "attributes": {
                        "type": "password",
                        "placeholder": "Password Row",
                        "modifierOptions": {
                            "fillMaxWidth": false,
                            "paddingBottom": 16
                        }
                    }
                },
                {
                    "element": "text",
                    "attributes": {
                        "type": "password 1",
                        "placeholder": "Password Row 1",
                        "modifierOptions": {
                            "fillMaxWidth": false,
                            "paddingBottom": 16
                        }
                    }
                }
            ]
        },
        {
            "element": "button",
            "attributes": {
                "text": "Login",
                "modifierOptions": {
                    "fillMaxWidth": true
                }
            }
        }
    ]
}